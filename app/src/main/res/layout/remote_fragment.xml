<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/ONOFF"
        android:layout_width="75dp"
        android:layout_height="85dp"
        android:padding="0dp"
        app:backgroundTint="#E53935"
        android:layout_marginTop="8dp"
        android:layout_marginStart="32dp"
        app:cornerRadius="20000dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:icon="@drawable/ic_power_settings_new_black_24dp"
        app:iconSize="55dp"
        app:iconPadding="0dp"
        app:iconGravity="textStart"
        android:elevation="10dp"/>

    <com.google.android.material.button.MaterialButton

        android:id="@+id/brighter"
        android:layout_width="65dp"
        android:layout_height="75dp"

        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        android:padding="0dp"
        app:cornerRadius="20000dp"
        app:backgroundTint="#FDFDFD"
        app:layout_constraintEnd_toStartOf="@id/dimmer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"

        app:icon="@drawable/ic_arrow_drop_up_black_24dp"
        app:iconSize="80dp"
        app:iconPadding="0dp"
        app:iconTint="#000000"
        app:iconGravity="textStart"/>
    <com.google.android.material.button.MaterialButton

        android:id="@+id/dimmer"
        android:layout_width="65dp"
        android:layout_height="75dp"

        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:padding="0dp"
        app:cornerRadius="20000dp"
        app:backgroundTint="#FDFDFD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:iconSize="80dp"
        app:iconPadding="0dp"
        app:iconTint="#000000"
        app:icon="@drawable/ic_arrow_drop_down_black_24dp"
        app:iconGravity="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/redBut"
        android:layout_width="75dp"
        android:layout_height="85dp"

        android:layout_marginTop="16dp"

        app:backgroundTint="#FF0000"

        app:cornerRadius="2000dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ONOFF"
        app:layout_constraintEnd_toStartOf="@id/greenBut"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/greenBut"
        android:layout_width="75dp"
        android:layout_height="85dp"

        app:backgroundTint="#00FF00"
        app:cornerRadius="2000dp"
        app:layout_constraintBottom_toBottomOf="@+id/redBut"
        app:layout_constraintStart_toEndOf="@+id/redBut"
        app:layout_constraintTop_toTopOf="@+id/redBut"
        app:layout_constraintEnd_toStartOf="@id/blueBut"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/blueBut"
        android:layout_width="75dp"
        android:layout_height="85dp"

        app:backgroundTint="#0000FF"
        app:cornerRadius="2000dp"
        app:layout_constraintBottom_toBottomOf="@+id/greenBut"
        app:layout_constraintStart_toEndOf="@+id/greenBut"
        app:layout_constraintTop_toTopOf="@+id/greenBut"
        app:layout_constraintEnd_toStartOf="@id/whiteBut"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/whiteBut"
        android:layout_width="75dp"
        android:layout_height="85dp"

        app:backgroundTint="#FFFFFF"
        app:cornerRadius="2000dp"
        app:layout_constraintBottom_toBottomOf="@+id/blueBut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/blueBut"
        app:layout_constraintTop_toTopOf="@+id/blueBut" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/orangeBut"
        android:layout_width="75dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"

        app:backgroundTint="@android:color/holo_orange_dark"
        app:cornerRadius="2000dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/redBut"
        app:layout_constraintEnd_toStartOf="@id/darkGreenBut"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/darkGreenBut"
        android:layout_width="75dp"
        android:layout_height="85dp"

        app:backgroundTint="#00C853"
        app:cornerRadius="2000dp"
        app:layout_constraintBottom_toBottomOf="@+id/orangeBut"
        app:layout_constraintStart_toEndOf="@+id/orangeBut"
        app:layout_constraintTop_toTopOf="@+id/orangeBut"
        app:layout_constraintEnd_toStartOf="@id/aquaBut"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/aquaBut"
        android:layout_width="75dp"
        android:layout_height="85dp"

        app:backgroundTint="#00DDFF"
        app:cornerRadius="2000dp"
        app:layout_constraintBottom_toBottomOf="@+id/darkGreenBut"
        app:layout_constraintStart_toEndOf="@+id/darkGreenBut"
        app:layout_constraintTop_toTopOf="@+id/darkGreenBut"
        app:layout_constraintEnd_toStartOf="@id/pinkBut"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/pinkBut"
        android:layout_width="75dp"
        android:layout_height="85dp"

        app:backgroundTint="#F900D0"
        app:cornerRadius="2000dp"
        app:layout_constraintBottom_toBottomOf="@+id/aquaBut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/aquaBut"
        app:layout_constraintTop_toTopOf="@+id/aquaBut" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/yellowGreenBut"
        android:layout_width="75dp"
        android:layout_height="85dp"

        app:backgroundTint="#C6FF00"
        app:cornerRadius="2000dp"
        app:layout_constraintBottom_toBottomOf="@+id/yellowBut"
        app:layout_constraintStart_toEndOf="@+id/yellowBut"
        app:layout_constraintTop_toTopOf="@+id/yellowBut"
        app:layout_constraintEnd_toStartOf="@id/purpleBut"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/purpleBut"
        android:layout_width="75dp"
        android:layout_height="85dp"

        app:backgroundTint="#8000FF"
        app:cornerRadius="2000dp"
        app:layout_constraintBottom_toBottomOf="@+id/yellowGreenBut"
        app:layout_constraintStart_toEndOf="@+id/yellowGreenBut"
        app:layout_constraintTop_toTopOf="@+id/yellowGreenBut"
        app:layout_constraintEnd_toStartOf="@id/whitePinkBut"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/whitePinkBut"
        android:layout_width="75dp"
        android:layout_height="85dp"

        app:backgroundTint="#FA6FFF"
        app:cornerRadius="2000dp"
        app:layout_constraintBottom_toBottomOf="@+id/purpleBut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/purpleBut"
        app:layout_constraintTop_toTopOf="@+id/purpleBut" />

    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="8dp"
        android:id="@+id/yellowBut"
        android:layout_width="75dp"
        android:layout_height="85dp"

        app:backgroundTint="#FFC400"
        app:cornerRadius="2000dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orangeBut"
        app:layout_constraintEnd_toStartOf="@id/yellowGreenBut"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/transition1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/transition1"
        app:layout_constraintRight_toLeftOf="@id/transition2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yellowBut" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/transition2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/transition2"
        app:layout_constraintBottom_toBottomOf="@+id/transition1"
        app:layout_constraintRight_toLeftOf="@id/transition3"
        app:layout_constraintStart_toEndOf="@id/transition1"
        app:layout_constraintTop_toTopOf="@+id/transition1"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/transition3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/transition3"
        app:layout_constraintBottom_toBottomOf="@+id/transition2"
        app:layout_constraintRight_toLeftOf="@id/transition4"
        app:layout_constraintStart_toEndOf="@id/transition2"
        app:layout_constraintTop_toTopOf="@+id/transition2"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/transition4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/transition4"
        app:layout_constraintBottom_toBottomOf="@+id/transition3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/transition3"
        app:layout_constraintTop_toTopOf="@+id/transition3" />


</androidx.constraintlayout.widget.ConstraintLayout>